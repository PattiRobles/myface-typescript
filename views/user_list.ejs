<html lang="en-gb">
<%- include('_head') -%>
    <%- include('_header') -%>

        <body>
            <h1>Users</h1>
            <ol>
                <% results.forEach(function(user) {%>
                    <li>
                        <%= user.name %>
                            <br></br>
                            <img src="<%=user.profileImageUrl %>>" </img>
                            <!-- with an extra > after the %> tag above, the picture changes - why? -->
                    </li>
                    <% }); %>
            </ol>
            <%if (next) { %>
                <a href="<%= next %>">Next</a>
                <% } %>
                    <%if (previous) { %>
                        <a href="<%= previous %>">Previous</a>
                        <% } %>
        </body>
        <%- include('_footer') -%>

</html>